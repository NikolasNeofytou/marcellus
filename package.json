{
  "name": "opensilicon",
  "version": "0.1.0",
  "private": true,
  "description": "The Modern VLSI Layout IDE â€” VSCode for Chip Design",
  "scripts": {
    "dev": "cd apps/frontend && pnpm tauri dev",
    "build": "cd apps/frontend && pnpm tauri build",
    "frontend:dev": "cd apps/frontend && pnpm dev",
    "frontend:build": "cd apps/frontend && pnpm build",
    "lint": "cd apps/frontend && pnpm lint",
    "test": "cd apps/frontend && pnpm test",
    "rust:check": "cd crates && cargo check --workspace",
    "rust:test": "cd crates && cargo test --workspace",
    "rust:clippy": "cd crates && cargo clippy --workspace",
    "prepare": "husky"
  },
  "keywords": [
    "vlsi",
    "eda",
    "layout",
    "chip-design",
    "tauri"
  ],
  "license": "Apache-2.0",
  "lint-staged": {
    "apps/frontend/src/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix --no-warn-ignored"
    ],
    "*.{json,md,yml,yaml,css}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1"
  }
}
